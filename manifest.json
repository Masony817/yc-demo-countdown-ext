{
    "manifest_version": 3,
    "name": "YC DemoDay Countdown",
    "version": "1.0",
    "description": "Countdown to YC DemoDay",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/48/icon.png"
    },
    "icons": {
        "16": "icons/16/icon.png",
        "32": "icons/32/icon.png",
        "48": "icons/48/icon.png",
        "128": "icons/128/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "notifications",
        "storage"
    ]
}